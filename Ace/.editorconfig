# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
# (Please don't specify an indent_size here; that has too many unintended consequences)

[*.py] # Code files
indent_size = 4

[*.{yaml,yml,json}]
indent_size = 2

[*.sh]
indent_size = 2
